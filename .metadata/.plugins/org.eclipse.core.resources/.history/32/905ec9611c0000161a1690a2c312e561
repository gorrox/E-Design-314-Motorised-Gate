#include "global.h"
#include "string.h"

uint8_t message[14] = {0};
int transmitting = 0;

/*
 * Transmits an array of 14 bits via IR LED
 * Uses Manchester RC5 encoding
 */
void transmit(uint8_t * m)
{
	if (!transmitting)
	{
		strncpy(message, m, 14);
		transmitting = 1;
	}
}
